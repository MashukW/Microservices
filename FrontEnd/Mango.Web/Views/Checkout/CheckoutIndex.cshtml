@model Mango.Web.Models.View.Checkouts.CheckoutView

@if (TempData["Error"] != null)
{
	<div class="alert alert-warning" role="alert">@TempData["Error"]</div>
}

@if (Model?.CartItems != null && Model?.CartItems.Count > 0)
{
	<form method="post">
		<input asp-for="CouponCode" hidden />
		<input asp-for="TotalCost" hidden />
		<input asp-for="DiscountAmount" hidden />

		<div>
			<span style="font-size:25px;" class="text-warning">Enter details and place order :</span>
			<br />
		</div>
		<div class="border mt-2">
			<div class="container row">
				<div class="col-7">
					<div class="row">
						<div class="col-12">
							<label class="col-form-label">First Name :</label>
							<input asp-for="UserDetails.FirstName" class="form-control" />
						</div>
						<div class="col-12">
							<label class="col-form-label">Last Name :</label>
							<input asp-for="UserDetails.LastName" class="form-control" />
						</div>
						<div class="col-12">
							<label class="col-form-label">Email :</label>
							<input asp-for="UserDetails.Email" class="form-control" />
						</div>
						<div class="col-12">
							<label class="col-form-label">Phone Number :</label>
							<input asp-for="UserDetails.PhoneNumber" class="form-control" />
						</div>
						<div class="col-12">
							<label class="col-form-label">PickUp Time</label>
							<input asp-for="PickupDateTime" class="form-control form_datetime" type="text">
						</div>
						<div class="col-12">
							<label class="col-form-label">Card Number :</label>
							<input asp-for="PaymentCard.CardNumber" class="form-control" />
						</div>
						<div class="col-12">
							<label class="col-form-label">CVV :</label>
							<input asp-for="PaymentCard.Cvv" class="form-control" />
						</div>
						<div class="col-12 pb-4">
							<label class="col-form-label">Expiry :</label>
							<input asp-for="PaymentCard.ExpityMonthYear" placeholder="MMYY" class="form-control" />
						</div>
					</div>
				</div>
				<div class="col-5">
					<div class="card mt-4">
						<div class="card-body">
							<div class=" d-none d-lg-block">
								<div class="row text-danger">
									<div class="col-6">
										Product Details
									</div>

									<div class="col-3">
										Price
									</div>
									<div class="col-3">
										Count
									</div>
								</div>
							</div>
							<hr />

							@for (int i = 0; i < Model.CartItems.Count; i++)
							{
								<div class="row h-100">
									<div class="col-6">
										<span style="font-size:20px">@Model.CartItems[i].Product.Name</span>
									</div>
									<div class="col-3" style="font-size:11px;">
										<span style="font-size:17px;">@Model.CartItems[i].Product.Price</span>
									</div>
									<div class="col-3" style="font-size:11px;">
										<span style="font-size:17px;">@Model.CartItems[i].Count</span>
									</div>
									<div>
										@Html.HiddenFor(x => Model.CartItems[i].Count)
										@Html.HiddenFor(x => Model.CartItems[i].PublicId)
										@Html.HiddenFor(x => Model.CartItems[i].Product.PublicId)
										@Html.HiddenFor(x => Model.CartItems[i].Product.Name)
										@Html.HiddenFor(x => Model.CartItems[i].Product.Price)
									</div>
								</div>
							}
							<hr />
							<div class="row">
								<div class="col-12 text-right pr-4 text-danger">
									Total Cost :  @string.Format("{0:c}", Model.TotalCost) <br />
									@if (Model.DiscountAmount > 0)
									{
										<span class="text-success">Discount Amount: @string.Format("{0:c}", Model.DiscountAmount)</span>
									}
								</div>
							</div>
						</div>
						<div class="card-footer">
							<div class="row">

								<div class="col-12 ">
									<button type="submit" class="btn btn-success form-control ">
										<span>Place Order</span>
									</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
}

@section Scripts {
<script type="text/javascript">
	$(document).ready(function() {
		$(".form_datetime").datetimepicker({format: 'yyyy-mm-dd hh:ii'});
		$(".form_datetime").datetimepicker('setStartDate', new Date());
	})
</script>
}